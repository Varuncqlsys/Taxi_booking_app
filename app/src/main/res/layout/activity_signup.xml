<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/logo_lay"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/logo"
                    android:textSize="28sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <LinearLayout
                    android:id="@+id/signup_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/signup_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/sign_up"
                        android:textAllCaps="true"
                        android:textColor="@android:color/white"
                        android:textSize="30dp"
                        android:textStyle="italic" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:src="@drawable/sign_in_line" />

                </LinearLayout>

                <EditText
                    android:id="@+id/full_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/signup_lay"
                    android:layout_marginTop="40dp"
                    android:textCursorDrawable="@drawable/white_cursor"
                    android:background="@android:color/transparent"
                    android:hint="Name"
                    android:digits="abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/white" />

                <View
                    android:id="@+id/fullname_view"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_dp1"
                    android:layout_below="@id/full_name"
                    android:layout_marginLeft="@dimen/margin_dp10"
                    android:layout_marginRight="@dimen/margin_dp10"
                    android:background="@color/white" />

                <EditText
                    android:id="@+id/surname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/fullname_view"
                    android:layout_marginTop="15dp"
                    android:textCursorDrawable="@drawable/white_cursor"
                    android:background="@android:color/transparent"
                    android:hint="Last Name"
                    android:digits="abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/white" />

                <View
                    android:id="@+id/surname_view"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_dp1"
                    android:layout_below="@id/surname"
                    android:layout_marginLeft="@dimen/margin_dp10"
                    android:layout_marginRight="@dimen/margin_dp10"
                    android:background="@color/white" />


                <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/surname_view"
                    android:layout_marginTop="15dp"
                    android:textCursorDrawable="@drawable/white_cursor"
                    android:background="@android:color/transparent"
                    android:hint="@string/email"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/white" />

                <View
                    android:id="@+id/email_view"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_dp1"
                    android:layout_below="@id/email"
                    android:layout_marginLeft="@dimen/margin_dp10"
                    android:layout_marginRight="@dimen/margin_dp10"
                    android:background="@color/white" />

                <LinearLayout
                    android:id="@+id/number_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/email"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <EditText
                        android:id="@+id/mobile_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:editable="false"
                        android:hint="+27 "
                        android:textCursorDrawable="@drawable/white_cursor"
                        android:textColor="@android:color/white"
                        android:textColorHint="@android:color/white" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@android:color/white" />


                    <EditText
                        android:id="@+id/contact_no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:hint="Please fill number"
                        android:inputType="number"
                        android:textCursorDrawable="@drawable/white_cursor"
                        android:singleLine="true"
                        android:textColor="@android:color/white"
                        android:textColorHint="@android:color/white" />


                </LinearLayout>

                <View
                    android:id="@+id/number_lay_view"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_dp1"
                    android:layout_below="@id/number_lay"
                    android:layout_marginLeft="@dimen/margin_dp10"
                    android:layout_marginRight="@dimen/margin_dp10"
                    android:background="@color/white" />

                <EditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/number_lay_view"
                    android:layout_marginTop="15dp"
                    android:background="@android:color/transparent"
                    android:hint="@string/password"
                    android:textCursorDrawable="@drawable/white_cursor"
                    android:inputType="textPassword"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/white" />

                <View
                    android:id="@+id/password_view"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_dp1"
                    android:layout_below="@id/password"
                    android:layout_marginLeft="@dimen/margin_dp10"
                    android:layout_marginRight="@dimen/margin_dp10"
                    android:background="@color/white" />

                <Spinner
                    android:id="@+id/city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/password_view"
                    android:layout_marginTop="15dp"
                    android:background="@android:color/transparent"
                    android:hint="@string/city"
                    android:textCursorDrawable="@drawable/white_cursor"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/white" />

                <View
                    android:id="@+id/city_view"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_dp1"
                    android:layout_below="@id/city"
                    android:layout_marginLeft="@dimen/margin_dp10"
                    android:layout_marginRight="@dimen/margin_dp10"
                    android:background="@color/white" />

                <EditText
                    android:id="@+id/invite_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/city_view"
                    android:layout_marginTop="15dp"
                    android:background="@android:color/transparent"
                    android:hint="@string/invite_code"
                    android:padding="10dp"
                    android:textCursorDrawable="@drawable/white_cursor"
                    android:singleLine="true"
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/white" />
                <View
                    android:id="@+id/invite_code_view"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_dp1"
                    android:layout_below="@id/invite_code"
                    android:layout_marginLeft="@dimen/margin_dp10"
                    android:layout_marginRight="@dimen/margin_dp10"
                    android:background="@color/white" />


                <EditText
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/invite_code_view"
                    android:layout_marginTop="15dp"
                    android:background="@android:color/transparent"
                    android:hint="Address"
                    android:padding="10dp"
                    android:textCursorDrawable="@drawable/white_cursor"
                    android:singleLine="true"
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/white" />

                <View
                    android:id="@+id/address_view"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_dp1"
                    android:layout_below="@id/address"
                    android:layout_marginLeft="@dimen/margin_dp10"
                    android:layout_marginRight="@dimen/margin_dp10"
                    android:background="@color/white" />

                <TextView
                    android:id="@+id/vehicle_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/address_view"
                    android:layout_margin="10dp"
                    android:text="Vehicle Information"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20sp"
                    android:textStyle="bold" />


                <EditText
                    android:id="@+id/make"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/vehicle_info"
                    android:layout_marginTop="15dp"
                    android:background="@android:color/transparent"
                    android:hint="@string/make"
                    android:padding="10dp"
                    android:textCursorDrawable="@drawable/white_cursor"
                    android:singleLine="true"
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/white" />

                <View
                    android:id="@+id/make_view"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_dp1"
                    android:layout_below="@id/make"
                    android:layout_marginLeft="@dimen/margin_dp10"
                    android:layout_marginRight="@dimen/margin_dp10"
                    android:background="@color/white" />

                <EditText
                    android:id="@+id/model"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/make_view"
                    android:layout_marginTop="15dp"
                    android:background="@android:color/transparent"
                    android:hint="@string/model"
                    android:padding="10dp"
                    android:textCursorDrawable="@drawable/white_cursor"
                    android:singleLine="true"
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/white" />

                <View
                    android:id="@+id/model_view"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_dp1"
                    android:layout_below="@id/model"
                    android:layout_marginLeft="@dimen/margin_dp10"
                    android:layout_marginRight="@dimen/margin_dp10"
                    android:background="@color/white" />

                <EditText
                    android:id="@+id/year"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/model_view"
                    android:layout_marginTop="15dp"
                    android:background="@android:color/transparent"
                    android:hint="@string/year"
                    android:inputType="number"
                    android:textCursorDrawable="@drawable/white_cursor"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/white" />

                <View
                    android:id="@+id/year_view"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_dp1"
                    android:layout_below="@id/year"
                    android:layout_marginLeft="@dimen/margin_dp10"
                    android:layout_marginRight="@dimen/margin_dp10"
                    android:background="@color/white" />

                <EditText
                    android:id="@+id/vehicle_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/year_view"
                    android:layout_marginTop="15dp"
                    android:background="@android:color/transparent"
                    android:hint="@string/vehicle_no"
                    android:padding="10dp"
                    android:textCursorDrawable="@drawable/white_cursor"
                    android:singleLine="true"
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/white" />

                <View
                    android:id="@+id/vehicle_no_view"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_dp1"
                    android:layout_below="@id/vehicle_no"
                    android:layout_marginLeft="@dimen/margin_dp10"
                    android:layout_marginRight="@dimen/margin_dp10"
                    android:background="@color/white" />

                <CheckBox
                    android:id="@+id/checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/vehicle_no"
                    android:button="@drawable/check_box"
                    android:layout_margin="10dp" />

                <TextView
                    android:id="@+id/term_condition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/vehicle_no"
                    android:layout_toRightOf="@+id/checkbox"
                    android:padding="15dp"
                    android:text="I agree term And condition"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp" />


                <TextView
                    android:id="@+id/continue_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/checkbox"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/btn_bgd"
                    android:gravity="center"
                    android:padding="18dp"
                    android:text="@string/continue_"
                    android:textAllCaps="true"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/textsize_sp20"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/sign_in"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/continue_btn"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="@string/sign_in"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/textsize_sp18" />

            </RelativeLayout>


        </LinearLayout>
    </ScrollView>


</LinearLayout>