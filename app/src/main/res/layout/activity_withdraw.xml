<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/activity_welcome"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background">

        <RelativeLayout
            android:id="@+id/welcome_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_dp25"
            android:layout_marginLeft="@dimen/margin_dp20"
            android:layout_marginRight="@dimen/margin_dp20">

            <TextView
                android:id="@+id/welcome_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Withdraw"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_sp45"
                android:textStyle="bold"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/sign_in_line"
                android:layout_toRightOf="@+id/welcome_text"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_dp20"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please Enter your Amount for withdraw"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_sp22"
            android:layout_below="@+id/welcome_layout"
            android:layout_marginTop="@dimen/margin_dp25"
            android:layout_marginLeft="@dimen/margin_dp20"
            android:layout_marginRight="@dimen/margin_dp20"/>

        <RelativeLayout
            android:id="@+id/taxilive_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/leave_comment"
            android:layout_below="@+id/title_text"
            android:layout_marginTop="@dimen/margin_dp20"
            android:layout_marginLeft="@dimen/margin_dp20"
            android:layout_marginRight="@dimen/margin_dp20">

            <TextView
                android:id="@+id/total_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Taxilive"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/textsize_sp30"
                android:layout_marginTop="@dimen/margin_dp12"
                android:layout_marginLeft="@dimen/margin_dp8"/>

            <TextView
                android:id="@+id/droppin_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This Request is send to Admin, after confirmation that amount send to your account by admin. "
                android:textSize="@dimen/textsize_sp20"
                android:layout_below="@+id/total_amount"
                android:layout_marginTop="@dimen/margin_dp12"
                android:layout_marginLeft="@dimen/margin_dp8"
                android:layout_marginRight="@dimen/margin_dp8"
                android:layout_marginBottom="@dimen/margin_dp20"/>

        </RelativeLayout>


    <EditText
        android:id="@+id/edt_amount"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:hint="Amount"
        android:inputType="number"
        android:paddingLeft="10dp"
        android:layout_below="@+id/taxilive_layout"
        android:background="@drawable/leave_comment"/>

        <Button
            android:id="@+id/continue_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dialog1_bg"
            android:text="Send Request"
            android:textColor="@color/black"
            android:textSize="@dimen/textsize_sp20"
            android:layout_below="@+id/edt_amount"
            android:layout_marginTop="@dimen/margin_dp30"
            android:layout_marginLeft="@dimen/margin_dp20"
            android:layout_marginRight="@dimen/margin_dp20"/>





    </RelativeLayout>

