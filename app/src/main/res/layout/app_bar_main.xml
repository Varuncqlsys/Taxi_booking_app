<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorPrimaryDark">

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@color/colorPrimaryDark">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/toggle"
        android:id="@+id/menu"
        android:padding="@dimen/margin_dp10"/>

        <View
            android:id="@+id/view"
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:background="@color/white"
            android:layout_toRightOf="@+id/menu"
            android:layout_marginLeft="@dimen/margin_dp20"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Offline"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize_sp18"
        android:layout_toRightOf="@+id/view"
        android:layout_alignTop="@+id/menu" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/options"
            android:background="@drawable/toggle_btn"
            android:button="@null"
            android:checked="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_dp10"
            android:layout_marginTop="@dimen/margin_dp5"/>

    </RelativeLayout>

</android.support.v7.widget.Toolbar>




