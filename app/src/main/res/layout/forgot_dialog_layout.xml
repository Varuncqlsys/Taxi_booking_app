<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cross"
        android:layout_marginRight="@dimen/margin_dp10"
        android:layout_marginLeft="@dimen/margin_dp10"
        android:background="@drawable/dialog_bg">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/forgot_password"
            android:textSize="@dimen/textsize_sp20"
            android:padding="@dimen/padding_dp15"
            android:layout_marginTop="@dimen/margin_dp30"
            android:textColor="@android:color/black"
            android:id="@+id/dummy"
            android:gravity="center" />

        <EditText
            android:id="@+id/dialog_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_dp35"
            android:background="@android:color/transparent"
            android:hint="@string/email"
            android:padding="@dimen/padding_dp15"
            android:layout_below="@+id/dummy"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/black"
            android:layout_marginRight="@dimen/margin_dp10"
            android:layout_marginLeft="@dimen/margin_dp10"
            android:textSize="@dimen/textsize_sp15"
            android:singleLine="true"/>

        <View
            android:id="@+id/view"
            android:layout_below="@+id/dialog_email"
            android:layout_width="match_parent"
            android:layout_marginRight="@dimen/margin_dp20"
            android:layout_marginLeft="@dimen/margin_dp20"
            android:layout_height="@dimen/margin_dp1"
            android:background="@android:color/black"/>

        <Button
            android:layout_below="@+id/view"
            android:id="@+id/send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_dp20"
            android:textAllCaps="true"
            android:background="@drawable/btn_bgd"
            android:paddingLeft="45dp"
            android:paddingRight="45dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="Send"
            android:textStyle="bold"
            android:textSize="@dimen/textsize_sp20"/>

        <View
            android:layout_below="@+id/send"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_dp25"
            android:background="@android:color/transparent" />

    </RelativeLayout>

    <ImageButton
        android:id="@+id/cross"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="-20dp"
        android:padding="20dp"
        android:background="@drawable/dialog_close" />

</RelativeLayout>