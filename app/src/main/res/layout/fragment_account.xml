<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="2"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_margin="@dimen/margin_dp15"
            android:background="@color/gray_text">


        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/profile_pic"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/proimg"
            android:layout_margin="@dimen/margin_dp10"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/username"
            android:layout_toRightOf="@+id/profile_pic"
            android:layout_toLeftOf="@+id/edit_profile"
            android:textSize="@dimen/textsize_sp20"
            android:singleLine="true"
            android:layout_alignTop="@+id/profile_pic"
            android:text="John Markerr"
            android:layout_marginLeft="@dimen/margin_dp10"
            android:textColor="@color/colorPrimaryDark"/>

            <LinearLayout
                android:id="@+id/edit_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="15dp"
                >
                <ImageView
                    android:id="@+id/edit_pic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/pencil"
                    android:layout_alignParentRight="true" />
            </LinearLayout>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/country"
                android:text="City"
                android:textSize="@dimen/textsize_sp16"
                android:layout_below="@+id/username"
                android:layout_alignLeft="@+id/username"
                android:layout_marginTop="@dimen/margin_dp10"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/city_text"
                android:text="Not Mention"
                android:singleLine="true"
                android:textSize="@dimen/textsize_sp16"
                android:layout_below="@+id/country"
                android:layout_alignLeft="@+id/username" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/age"
                android:text="Age Group"
                android:textSize="@dimen/textsize_sp16"
                android:layout_below="@+id/city_text"
                android:layout_alignLeft="@+id/username"
                android:layout_marginTop="@dimen/margin_dp10"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/age_text"
                android:text="Not Mention"
                android:textSize="@dimen/textsize_sp16"
                android:singleLine="true"
                android:layout_below="@+id/age"
                android:layout_alignLeft="@+id/username" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bio"
                android:text="Bio / Info"
                android:textSize="@dimen/textsize_sp16"
                android:layout_below="@+id/profile_pic"
                android:layout_alignLeft="@+id/profile_pic"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/bio_text"
                android:text="No Info"
                android:textSize="@dimen/textsize_sp16"
                android:singleLine="true"
                android:layout_below="@+id/bio"
                android:layout_alignLeft="@+id/profile_pic"
                android:layout_marginTop="@dimen/margin_dp5"/>

        </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/margin_dp15"
            android:layout_marginRight="@dimen/margin_dp15"
            android:layout_marginBottom="@dimen/margin_dp10"
            android:background="@color/gray_text">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/help">

        <TextView
            android:id="@+id/help_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_dp20"
            android:layout_marginRight="@dimen/margin_dp20"
            android:layout_marginTop="@dimen/margin_dp20"
            android:textStyle="bold"
            android:text="Help"
            android:textSize="@dimen/textsize_sp16" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/help_image"
            android:src="@drawable/rite_arrow"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_dp20"
            android:layout_alignTop="@+id/help_text"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"
            android:layout_below="@+id/help_text"
            android:layout_marginTop="@dimen/margin_dp20"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/payment">

        <TextView
            android:id="@+id/payment_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_dp20"
            android:layout_marginRight="@dimen/margin_dp20"
            android:layout_marginTop="@dimen/margin_dp20"
            android:textStyle="bold"
            android:text="Payment"
            android:textSize="@dimen/textsize_sp16" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/payment_image"
            android:src="@drawable/rite_arrow"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_dp20"
            android:layout_alignTop="@+id/payment_text"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"
            android:layout_below="@+id/payment_text"
            android:layout_marginTop="@dimen/margin_dp20"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/setting">

        <TextView
            android:id="@+id/setting_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_dp20"
            android:layout_marginRight="@dimen/margin_dp20"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/margin_dp20"
            android:text="Setting"
            android:textSize="@dimen/textsize_sp16" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/setting_image"
            android:src="@drawable/rite_arrow"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_dp20"
            android:layout_alignTop="@+id/setting_text"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"
            android:layout_below="@+id/setting_text"
            android:layout_marginTop="@dimen/margin_dp20"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/about">

        <TextView
            android:id="@+id/about_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_dp20"
            android:layout_marginRight="@dimen/margin_dp20"
            android:layout_marginTop="@dimen/margin_dp20"
            android:text="About"
            android:layout_marginBottom="20dp"
            android:textStyle="bold"
            android:textSize="@dimen/textsize_sp16" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/about_image"
            android:src="@drawable/rite_arrow"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_dp20"
            android:layout_alignTop="@+id/about_text"/>

    </RelativeLayout>

        </LinearLayout>

    </LinearLayout>
    </ScrollView>

</LinearLayout>