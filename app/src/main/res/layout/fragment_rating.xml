<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginLeft="@dimen/margin_dp12"
                android:layout_marginRight="@dimen/margin_dp12"
                android:layout_marginTop="@dimen/margin_dp12"
                android:background="@color/colorPrimaryDark"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/star_rating"
                    android:layout_width="@dimen/margin_dp25"
                    android:layout_height="@dimen/margin_dp25"
                    android:layout_alignTop="@+id/rating_text"
                    android:layout_marginTop="@dimen/margin_dp20"
                    android:src="@drawable/star" />

                <TextView
                    android:id="@+id/rating_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_dp20"
                    android:layout_toRightOf="@+id/star_rating"
                    android:text="4.0"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textsize_sp60" />

                <TextView
                    android:id="@+id/current_rating_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/star_rating"
                    android:layout_below="@+id/rating_text"
                    android:layout_toRightOf="@+id/star_rating"
                    android:text="YOUR CURRENT RATING"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/textsize_sp12" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_dp12"
                android:layout_marginRight="@dimen/margin_dp12"
                android:orientation="horizontal"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorPrimaryDark"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/current_rating_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_dp8"
                        android:text="4.0"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textsize_sp16"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/current_rating"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_dp5"
                        android:layout_marginTop="@dimen/margin_dp5"
                        android:text="CURRENT RATING"
                        android:textAlignment="center"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/textsize_sp10" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorPrimaryDark"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/requests_accepted_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_dp8"
                        android:text="250"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textsize_sp16"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/requests_accepted"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_dp5"
                        android:layout_marginTop="@dimen/margin_dp5"
                        android:text="REQUESTS ACCEPTED"
                        android:textAlignment="center"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/textsize_sp10" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorPrimaryDark"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/trips_cancelled_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_dp8"
                        android:text="5"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textsize_sp16"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/trips_cancelled"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_dp5"
                        android:layout_marginTop="@dimen/margin_dp5"
                        android:text="TRIPS CANCELED"
                        android:textAlignment="center"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/textsize_sp10" />

                </LinearLayout>

            </LinearLayout>

